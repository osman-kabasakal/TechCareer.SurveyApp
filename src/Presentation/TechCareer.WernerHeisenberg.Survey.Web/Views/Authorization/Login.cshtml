@using TechCareer.WernerHeisenberg.Survey.Application.Models.Responses
@model TechCareer.WernerHeisenberg.Survey.Application.CQRS.Business.AccountBusiness.Commands.Login.LoginRequestModel
@{
    var serviceResponse = ViewBag.ServiceResponse as IServiceResponse;
}
<div style="position:relative; width: 100%" class="d-flex align-items-center py-4 bg-body-tertiary">
    
<section class="form-signin w-100 m-auto ">
    <form asp-action="Login" method="post" asp-route-returnUrl="@Context.Request.Headers.Referer">
        <img class="mb-4" src="logo-no-background.png" alt="" width="72" height="72"/>
        <h1 class="h3 mb-3 fw-normal">Çabucak giriş yapmalısın! En iyi arkadaşın değişmiş olabilir :) </h1>
    
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email</label>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <label asp-for="Password">Şifre</label>
        </div>
    
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">
                Bu tarayıcıda hatırlanmak istersen solu tiklemen yeterli :)
            </label>
        </div>
    
        @if (serviceResponse != null && !serviceResponse.IsSuccessful && !string.IsNullOrEmpty(serviceResponse.ExceptionMessage))
        {
            <div class="alert alert-danger" role="alert">
                <p class="mt-5 mb-3 text-body-secondary">
                    @serviceResponse.ExceptionMessage
                </p>
            </div>
        }
    
    
        <button class="btn btn-primary w-100 py-2" type="submit">Formu doldurdum</button>
    
    </form>
</section>
</div>
